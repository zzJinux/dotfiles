[core]
  editor = nvim
  autocrlf = input
[init]
  defaultBranch = master
[rebase]
  autosquash = true
[alias]
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all

  # https://stackoverflow.com/a/33548037/3912693
  br-prrr = !"git fetch -p && git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}' | xargs git branch -D"

  root = rev-parse --show-toplevel

  # Basic Snapshotting
  ad = add
  st = status
  di = diff
  cm = commit
  re = restore
  rs = reset
  # Branching and Merging
  br = branch
  co = checkout
  sw = switch
  mg = merge
  ss = stash
  tg = tag
  wt = worktree
  wtls = worktree list
  # Sharing and Updating Projects
  fe = fetch
  ll = pull
  pu = push
  rmt = remote
  # Inspection and Comparison
  so = show
  lg = log
  slg = shortlog
  # Patching
  ap = apply
  cp = cherry-pick
  rb = rebase
  rv = revert
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = true
[pack]
  packsizelimit = 2g
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[include]
  path = ~/.config/git/config__local
