[core]
  editor = nvim
  autocrlf = input
  fsmonitor = true
  untrackedCache = true
[init]
  defaultBranch = master
[rebase]
  autoSquash = true
  autoStash = true
  # updateRef = true
[rerere]
  enabled = true
  autoupdate = true
[merge]
  conflictstyle = zdiff3
[push]
  default = simple
  autoSetupRemote = true
  followTags = true
[pull]
  rebase = true
[fetch]
  prune = true
  # pruneTags = true
  all = true
[alias]
  lg1 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)'
  lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)'

  # https://stackoverflow.com/a/33548037/3912693
  br-prrr = !"git fetch -p && git for-each-ref --format '%(refname) %(upstream:track)' refs/heads | awk '$2 == \"[gone]\" {sub(\"refs/heads/\", \"\", $1); print $1}' | xargs git branch -D"

  root = rev-parse --show-toplevel
  fsy = ffsync

  # Basic Snapshotting
  ad = add
  st = status
  df = diff
  cm = commit
  re = restore
  rs = reset
  # Branching and Merging
  br = branch
  co = checkout
  sw = switch
  mg = merge
  ss = stash
  tg = tag
  wt = worktree
  wtls = worktree list
  # Sharing and Updating Projects
  fe = fetch
  pl = pull
  ps = push
  rmt = remote
  # Inspection and Comparison
  so = show
  lg = log
  slg = shortlog
  # Patching
  ap = apply
  cp = cherry-pick
  rb = rebase
  rv = revert
  # Plumbing
  rp = rev-parse
  # Internal helpers
  hk = hook
  # More Git aliases to consider
  # https://github.com/zimfw/git
  # https://github.com/ohmyzsh/ohmyzsh/tree/master/plugins/git
[help]
  autocorrect = prompt
[color]
  ui = auto
  diff = auto
  status = auto
  branch = auto
  interactive = true
[column]
  ui = auto
[branch]
  sort = -committerdate
[tag]
  sort = -committerdate
[diff]
  algorithm = histogram
  colorMoved = plain
  mnemonicPrefix = true
  rename = true
[commit]
  verbose = true
[pack]
  packsizelimit = 2g
[filter "lfs"]
  required = true
  clean = git-lfs clean -- %f
  smudge = git-lfs smudge -- %f
  process = git-lfs filter-process
[include]
  path = ~/.config/git/config__local
[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
