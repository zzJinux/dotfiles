[
    {
        "key": "cmd+n",
        "command": "workbench.action.files.newUntitledFile",
        "when": "!filesExplorerFocus && !auxiliaryBarFocus && !(@inlineDiffs.rejectPartialEdit.isActiveEditorWithDiffs)"
    },
    {
        "key": "cmd+n",
        "command": "-workbench.action.files.newUntitledFile"
    },
    {
        "key": "cmd+n n",
        "command": "explorer.newFile",
        "when": "explorerViewletVisible && filesExplorerFocus"
    },
    {
        "key": "cmd+n m",
        "command": "explorer.newFolder",
        "when": "explorerViewletVisible && filesExplorerFocus"
    },
    {
        "key": "shift+cmd+'",
        "command": "workbench.action.toggleMaximizedPanel"
    },
    {
        "key": "cmd+k a",
        "command": "workbench.action.toggleCenteredLayout",
        "when": "!terminalFocus"
    },
    {
        "key": "cmd+k z",
        "command": "workbench.action.toggleZenMode",
        "when": "!isAuxiliaryWindowFocusedContext && !terminalFocus"
    },
    {
        "key": "cmd+k z",
        "command": "-workbench.action.toggleZenMode",
        "when": "!isAuxiliaryWindowFocusedContext"
    },
    {
        "key": "alt+cmd+;",
        "command": "toggleVim"
    },
    {
        "key": "cmd+d",
        "command": "compareSelected",
        "when": "explorerViewletFocus"
    },
    // Assume vscode-kbd-for-cursor 1.0.4
    // {{{ Cursor-only
    {
        "key": "shift+cmd+k",
        "command": "-aipopup.action.modal.generate",
        "when": "editorFocus && !composerBarIsVisible"
    },
    {
        "key": "cmd+k l",
        "command": "aichat.insertselectionintochat"
    },
    {
        "key": "shift+cmd+l",
        "command": "-aichat.insertselectionintochat"
    },
    // }}}
    // {{{ go-to-next-change customization
    {
        "key": "alt+z",
        "command": "-go-to-next-change.go-to-next-scm-change"
    },
    {
        "key": "alt+f7",
        "command": "go-to-next-change.go-to-next-scm-change",
        "when": "textCompareEditorVisible"
    },
    {
        "key": "alt+f7",
        "command": "go-to-next-change.go-to-next-scm-change",
        "when": "editorTextFocus && !textCompareEditorActive && quickDiffDecorationCount != '0'"
    },
    {
        "key": "alt+a",
        "command": "-go-to-next-change.go-to-previous-scm-change"
    },
    {
        "key": "shift+alt+f7",
        "command": "go-to-next-change.go-to-previous-scm-change",
        "when": "textCompareEditorVisible"
    },
    {
        "key": "shift+alt+f7",
        "command": "go-to-next-change.go-to-previous-scm-change",
        "when": "editorTextFocus && !textCompareEditorActive && quickDiffDecorationCount != '0'"
    }
    /// }}}
]